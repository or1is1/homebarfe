generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId                   String  @map("user_id") @db.Uuid
  type                     String
  provider                 String
  providerAccountId        String  @map("provider_account_id")
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("account")
}

model Bookmark {
  id         BigInt    @id @default(autoincrement())
  cocktailId Int?      @map("cocktail_id")
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  userId     String?   @map("user_id") @db.Uuid
  cocktail   Cocktail? @relation(fields: [cocktailId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user       User?     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([userId, cocktailId], map: "uq_user_cocktail")
  @@map("bookmark")
}

model Cocktail {
  id           Int        @id @default(autoincrement())
  name         String
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)
  description  String?
  glass        String?
  instructions String?
  isPublic     Boolean    @default(true) @map("is_public")
  createdBy    String?    @map("created_by") @db.Uuid
  bookmarks    Bookmark[]
  user         User?      @relation(fields: [createdBy], references: [id], onDelete: NoAction, onUpdate: NoAction)
  recipes      Recipe[]

  @@map("cocktail")
}

model Ingredient {
  id               Int          @id @default(autoincrement())
  description      String?
  abv              Float?       @db.Real
  parentId         Int?         @map("parent_id")
  isPublic         Boolean      @default(false) @map("is_public")
  createdAt        DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  name             String
  createdBy        String?      @map("created_by") @db.Uuid
  ingredient       Ingredient?  @relation("ingredientToingredient", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  otherIngredients Ingredient[] @relation("ingredientToingredient")
  user             User?        @relation(fields: [createdBy], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ingredient_user_id_fkey")
  inventories      Inventory[]
  recipes          Recipe[]

  @@map("ingredient")
}

model Inventory {
  id           BigInt      @id @default(autoincrement())
  createdAt    DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  ingredientId Int?        @map("ingredient_id")
  quantity     Int         @default(1)
  purchaseDate DateTime?   @default(now()) @map("purchase_date") @db.Timestamp(6)
  userId       String?     @map("user_id") @db.Uuid
  ingredient   Ingredient? @relation(fields: [ingredientId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  user         User?       @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@unique([userId, ingredientId], map: "uq_user_ingredient")
  @@map("inventory")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  userId    String   @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id])

  @@index([name])
  @@map("post")
}

model Recipe {
  id           BigInt     @id @default(autoincrement())
  cocktailId   Int        @map("cocktail_id")
  ingredientId Int        @map("ingredient_id")
  amount       Float      @db.Real
  unit         String
  orderIndex   Int        @map("order_index")
  isOptional   Boolean    @default(false) @map("is_optional")
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)
  cocktail     Cocktail   @relation(fields: [cocktailId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("recipe")
}

model Session {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model User {
  id            String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name          String?
  email         String?      @unique
  emailVerified DateTime?    @map("email_verified")
  image         String?
  accounts      Account[]
  bookmarks     Bookmark[]
  cocktails     Cocktail[]
  ingredients   Ingredient[]
  inventories   Inventory[]
  posts         Post[]
  sessions      Session[]

  @@map("user")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_token")
}
